@model Shop.Models.ChackNorris.ChackNorrisViewModel

<div class="card-body">
    <div class="card-header">Chuck Norris Joke</div>
    <hr />

    <div class="form-group row">
        <label asp-for="categories" class="col-sm-2 col-form-label">Categories:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.categories)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="created_at" class="col-sm-2 col-form-label">Created At:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.created_at)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="icon_url" class="col-sm-2 col-form-label">Icon URL:</label>
        <div class="col-sm-10">
            <img src="@Model.icon_url" alt="Chuck Norris Icon" />
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="id" class="col-sm-2 col-form-label">ID:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="updated_at" class="col-sm-2 col-form-label">Updated At:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.updated_at)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="url" class="col-sm-2 col-form-label">URL:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.url)
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="value" class="col-sm-2 col-form-label">Value:</label>
        <div class="col-sm-10">
            @Html.DisplayFor(model => model.value)
        </div>
    </div>
    <hr />
<div>
            <form asp-controller="ChackNorris" asp-action="ChackJoke" method="post">
                <button type="submit" class="btn btn-info">New joke</button>
            </form>
            <br />
            <a asp-action="index" class="btn btn-info">Back</a>
    </div>



</div>