@using Microsoft.AspNetCore.Identity;
@inject SignInManager<Shop.Core.Domain.ApplicationUser> signInManager;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Shop</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Shop.styles.css" asp-append-version="true" />
</head>
<body>
    <div id="intro" class="bg-image" style="
        background-image: url('https://mdbootstrap.com/img/Photos/new-templates/craftsman/img(1).jpg');
        background-size: cover;
        background-attachment: fixed;">
    <header>
        <nav class="navbar navbar-expand-lg fixed-top navbar-scroll">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Shop</a>
                <button class="navbar-toggler" type="button" data-mdb-toggle="collapse"
                        data-mdb-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                        aria-label="Toggle navigation">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Spaceships" asp-action="Index" data-placement="bottom">Spaceship</a>
                    </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="RealEstate" asp-action="Index"  data-placement="bottom">Real Estate</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="KinderGartens" asp-action="Index"  data-placement="bottom">Kindergarten</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="OpenWeathers" asp-action="Index"  data-placement="bottom">Open Weather</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="ChackNorris" asp-action="Index"  data-placement="bottom">Chuck Norris</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="coctails" asp-action="Index"  data-placement="bottom">Cocktail</a>
                        </li>
                    <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="acuweather" asp-action="Index"  data-placement="bottom">City</a>
                        </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    @if (signInManager.IsSignedIn(User))
                    {
                        <li class="nav-item dropdown">
                            <div class="dropdown">
                                <button class="btn btn-info dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" area-expanded="false">
                                    Manage Button
                                </button>
                            </div>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <li>Reset Password</li>
                                <li>Change Password</li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <form method="post" asp-controller="Accounts" asp-action="Logout">
                                <button type="submit" class="nav-link btn btn-link py-0" style="width:auto; padding-top: 0.8rem;">
                                    Logout @User.Identity.Name
                                </button>
                            </form>
                        </li>
                    }
                    else
                    {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Register">Register</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Accounts" asp-action="Login">Login</a>
                            </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    </header>
        <main role="main">

            <div class="mask" style="padding-top: 10vh; min-height:88.5vh">
                <div class="container mx-auto w-90">
                    <div class="row align-items-center">
                        <div class="card" style="background-color: rgba(255, 255, 153, 0.6); border-radius: 5%; padding: 5%; width: 100%">

                            @RenderBody()
                        </div>
                    </div>
                </div>
            </div>

    </main>
        <footer class="footer border-top text-muted" style="position:static; margin-top:5vh">
        <div class="container">
            &copy; @DateTime.Now.Year - Shop - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>


    <!-- jQuery, Bootstrap JS, and Custom JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    </div>
</body>
</html>

<style>
    table{
    background-color: rgba(0, 0, 0, 0.3);
    color:white;
    }
    .table th{
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    }
    .card-header{
    background-color: rgba(0, 0, 0, 0.6);
    color: white;
    }

    .card-body {
    background-color: rgba(0, 0, 0, 0.3);
    color: white;
    }

    .form-group {
        border-bottom: 1px dotted;
        margin-left: 1vw;
        margin-right: 1vw;
    }
</style>