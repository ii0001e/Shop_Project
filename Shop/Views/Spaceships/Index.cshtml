@model IEnumerable<Shop.Models.Spaceship.SpaeshipsIndexViewModel>




    <div class="card-header alert-heading">Space shop</div>
@{
    int rowNumber = 1;
}

<div class="btn-for-create-space-ship-page-table">
    <a asp-action="create" asp-controller="spaceships" style="margin:10px" class="btn btn-primary">Create</a>
</div>

<form method="post">
    <table class="table table-hover table-bordered">

        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">Name</th>
                <th scope="col">Type</th>
                <th scope="col">Passanger</th>
                <th scope="col">Engine Power</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var spaceship in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@spaceship.Name</td>
                    <td>@spaceship.Type</td>
                    <td>@spaceship.Passangers</td>
                    <td>@spaceship.EnginPower</td>
                    <td>

                            <a asp-action="details" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="background-color:#e9d362; color:brown; margin-right: 8px;" class="btn btn-info">Details</a>
                            <a asp-action="update" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="border: solid 1px; margin-right: 10px;" class="btn btn-primary">Update</a>
                        <a asp-action="delete" asp-controller="spaceships" asp-route-id="@spaceship.Id" style="border: solid 1px; margin-right: 10px;"  class="btn btn-danger">Delete</a>


                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>

</form>
