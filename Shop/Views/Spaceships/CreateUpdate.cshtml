@model Shop.Models.Spaceship.SpaceshipCreateUpdateViewModel


<div class="container">
    <div>
        @if (Model.Id.HasValue)
        {
            <div class="card-header">
                <div>Update</div>

            </div>

        }
        else
        {
            <div class="card-header">
                <div>Create</div>

            </div>
        }
        <div class="card-body">
            <form class="login-form" action="javascript:void(0);" method="post" enctype="multipart/form-data">
                <input asp-for="Id" type="hidden" />
                <input asp-for="CreatedAt" type="hidden" />

                <div class="form-input-material">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="Name" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="Type" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="Type" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="Passangers" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="Passangers" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="EnginPower" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="EnginPower" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="Crew" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="Crew" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="Company" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="Company" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="CargoWeight" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <input class="form-control-material" asp-for="CargoWeight" class="form-control" />
                    </div>
                </div>

                <div class="form-input-material">
                    <label asp-for="Files" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-5">
                        <div class="custom-file">
                            <input class="form-control custom-file-label" asp-for="Files" multiple type="file" />
                            <label class="custom-file-label">Choose file...</label>
                        </div>
                    </div>
                </div>



                @foreach (var images in Model.FileToApiViewModels)
                {

                    <partial name="_Images" model="images" />

                    <input asp-action="removeImage" style="width:15%;" asp-controller="spaceships" asp-route-imageId="@images.ImageId" type="submit" class="btn btn-danger" value="Remove Image" />


                }



                <hr />

                @if (Model.Id.HasValue)
                {
                    <input asp-action="update" style="width:20%;" asp-controller="spaceships" type="submit" class="btn btn-pimary login-box form a  " value="Update" />
                }
                else
                {


                    <input asp-action="create" style="width:20%;" style="width:10%; color: white; border: solid 1px;" asp-controller="spaceships" type="submit" class="btn btn-pimary login-box form a " value="Create" />

                }






                <a asp-action="index" style="width:10%; color: white; border: solid 1px;" class="btn btn-pimary">Index</a>
            </form>
            <div/>
    </div>
    </div>
</div>




@section Scripts

{
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileLabel = $(this).next('.custom-file-label');
                var files = $(this)[0].files;
                if (files.length > 1) {
                    fileLabel.html(file.length + ' files selected');
                }
                else if (files.length == 1) {
                    fileLabel.html(files[0].name);
                }

            });
        });
    </script>
}
