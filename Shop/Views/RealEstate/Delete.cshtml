@model Shop.Models.Realestate.RealEstateDeleteViewModel

<div class="red">Delete</div>
<div>
    <div>Realestate</div>
    <div class="dark-transparent-background ">
        <dl class="row">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Id)
        </div>

        <div class="form-group row">
            <label asp-for="Address" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Address)
        </div>

        <div class="form-group row">
            <label asp-for="SizeSqrM" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.SizeSqrM)
        </div>

        <div class="form-group row">
            <label asp-for="SizeSqrM" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.RoomCount)
        </div>

        <div class="form-group row">
            <label asp-for="Floor" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.Floor)
        </div>

        <div class="form-group row">
            <label asp-for="BuildingType" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.BuildingType)
        </div>

        <div class="form-group row">
            <label asp-for="BuiltinYear" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.BuiltinYear)
        </div>

        <div class="form-group row">
            <label asp-for="CreatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.CreatedAt)
        </div>

        <div class="form-group row">
            <label asp-for="UpdatedAt" class="col-sm-2 col-form-label"></label>
            @Html.DisplayFor(model => Model.UpdatedAt)
        </div>
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Images</label>
            <div class="col-sm-10">
                @foreach (var image in Model.imageToDatabaseViewModels)
                {
                    <partial name="_Images" model="image" />
                }
                <form asp-controller="RealEstate" asp-action="RemoveAllImages" method="post">
                    <input type="hidden" name="realEstateId" value="@Model.Id" />
                        <button style="margin-top: 4px;" type="submit" class="btn btn-danger">Delete All Images</button>
                </form>
            </div>
        </div>
        </dl>
    </div>

    <form asp-action="DeleteConfirmation">
        <input type="hidden" asp-for="Id" />
        <input type="submit" class="btn btn-danger" value="Delete record" />
        <a asp-action="index" style="color:white;" class="btn btn-primary">Back</a>
    </form>


</div>