@model IEnumerable<Shop.Models.Kindergarten.KindergartensIndexViewModel>

<div class="card-header">Kindergarten</div>
@{
    int rowNumber = 1;
}
<div>
    <a asp-action="Create" style="margin:10px;" asp-controller="Kindergartens" class="btn btn-primary">Create</a>
</div>


<form method="post">

    <table class="table table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Nr</th>
                <th scope="col">GroupName</th>
                <th scope="col">ChildrenCount</th>
                <th scope="col">KindergartenName</th>
                <th scope="col">Teacher</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var kindergarten in Model)
            {
                <tr>
                    <td>@rowNumber</td>
                    <td>@kindergarten.GroupName</td>
                    <td>@kindergarten.ChildrenCount</td>
                    <td>@kindergarten.KindergartenName</td>
                    <td>@kindergarten.Teacher</td>
                    <td>
                        <div style="display: flex; gap: 5px;">
                            <a asp-action="Details" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-info">Details</a>
                            <a asp-action="Update" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-primary">Update</a>
                            <a asp-action="Delete" asp-controller="Kindergartens" asp-route-id="@kindergarten.Id" class="btn btn-danger">Delete</a>
                        </div>
                    </td>
                </tr>
                rowNumber += 1;
            }
        </tbody>
    </table>
</form>
