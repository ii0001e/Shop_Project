@model Shop.Models.OpenWeathers.SearchCityViewModel

<div class="container">
    <div class="card-header">Seach city</div>
    <div class="card-body">
        <form method="post">

            <div class="form-group  col-md-offset-3 col-md-5">
                <h5><b>Search the forecast in a city</b></h5>
                <hr/>
                <label asp-for="CityName" style="font-family:Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <p asp-validation-for="CityName" class="text-danger"></p>
            </div>
            <div class="form-group col-md-5">
                <button asp-controller="OpenWeathers" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

