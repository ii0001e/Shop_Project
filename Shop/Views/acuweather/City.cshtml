@model Shop.Models.Acuweather.AcuweatherIndexViewModel


<div class="container">
    <div class="card-header">Forecast for the selected city</div>
    <div class="card-body">
    <h2>@Html.DisplayFor(model => model.City)</h2>
    <hr />

    <div class="form-group row">
        <label asp-for="Key" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Key)
    </div>

    <div class="form-group row">
        <label asp-for="Maximum" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Maximum) °C
    </div>

    <div class="form-group row">
        <label asp-for="Minimum" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Minimum) °C
    </div>

    <div class="form-group row">
        <label asp-for="Link" class="col-sm-2 col-form-label"></label>
        @Html.DisplayFor(model => model.Link)
    </div>
    </div>
</div>
