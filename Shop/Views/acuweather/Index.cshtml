@model Shop.Models.Acuweather.SeachAcuweatherViewModel


<div class="container">
    <div class="card-header">Seach Results</div>

    <form method="post">
        <div class="card-body">
            <div class="form-class col-md-offset-3 col-md-5">
                <h2>Search the forecast in a city</h2>
                <label asp-for="CityName" style="font-family: Arial"></label>
                <input asp-for="CityName" class="form-control" />
                <span asp-validation-for="CityName" class="text-danger"></span>
                <br/>
                <button asp-controller="Acuweather" asp-action="SearchCity" class="btn btn-primary">Search</button>
            </div>
            </div>
    </form>
</div>

